<p>Please enter your e-mail and password to log in.</p>

{{#if errors}}
	<div class="alert alert-danger" role="alert">
		<strong>Something went wrong!</strong>
		<ul class="errors">
			{{#each errors}}
				<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
{{/if}}

<form action="/login" method="post">
	<div class="form-group">
		<label for="{{everyauth.password.loginFormFieldName}}">User</label>
        <div class="row">
            <div class="col-xs-4">
              <input type="text" class="form-control" name="{{everyauth.password.loginFormFieldName}}" value="{{email}}" />
            </div>
         </div>
	</div>
	<div class="form-group">
		<label for="{{everyauth.password.passwordFormFieldName}}">Password</label>
        <div class="row">
            <div class="col-xs-4">
              <input type="password" class="form-control" name="{{everyauth.password.passwordFormFieldName}}" />
            </div>
        </div>
	</div>
	<div class="form-group">
		<input type="submit" value="Sign in" class="btn btn-primary" />
	</div>
</form>
	